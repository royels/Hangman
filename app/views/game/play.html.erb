    window.onbeforeunload = function(){
        window.sessionStorage.setItem('visited', new Date().getTime());
    }
    var visited = +window.sessionStorage.getItem('visited');
    var isRefreshed = (new Date().getTime() - visited) < 6000;
    if(isRefreshed == true) {
        var confirmation = confirm("Refreshing will kill the current game and send you to the " +
                "start page. Is it ok to do so?");
        if(confirmation == true) {
            window.location.replace('/');
        }
    }
</script>
